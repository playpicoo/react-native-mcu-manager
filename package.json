{
  "name": "@playpicoo/react-native-mcu-manager",
  "title": "React Native MCU Manager",
  "version": "2.1.0-alpha.3",
  "description": "React Native Wrappers for MCUMgr's Android / iOS client libraries",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "react-native-mcu-manager.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "build": "bob build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "example": "yarn --cwd example"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "mcumgr"
  ],
  "repository": "https://github.com/playpicoo/react-native-mcu-manager.git",
  "author": "PlayerData <dev@playerdata.co.uk> (https://github.com/playpicoo)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/playpicoo/react-native-mcu-manager/issues"
  },
  "homepage": "https://github.com/playpicoo/react-native-mcu-manager#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/"
  },
  "dependencies": {
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.62.13",
    "@types/uuid": "8.3.4",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5",
    "react": "18.1.0",
    "react-native": "0.68.1",
    "react-native-builder-bob": "^0.18.1",
    "semantic-release": "^17.4.2",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
